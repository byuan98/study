        Session session=HibernateSessionFactory.getSession();
        Transaction transaction=session.getTransaction();
        
        transaction.begin();//开启事务
        
//        检索方式五:本地SQL
        Query query=session.createCriteria(Student.class);
  
        
        transaction.commit();//提交事务
        session.close();
    }
