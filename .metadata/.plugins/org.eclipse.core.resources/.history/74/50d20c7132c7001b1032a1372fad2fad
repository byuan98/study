package com.godfery.test;

import java.util.Scanner;

public class Text {
    public static void main(String[] args) {
//        JDK8新特性
//        Lambda表达式：允许把函数作为一个方法的参数;
//        方法引用：可以直接引用已有Java类或对象;
//        函数式接口：存在一个且仅有一个抽象方法，但是可以又多个非抽象方法的接口，函数式接口可以被隐式转换为lambda表达式;
        
//        1、lambda表达式，又称闭包
        TwoNumberAdd twoNumberAdd=(int a, int b)->a+b;
        Text text=new Text();
        System.out.println(twoNumberAdd.add(19, 20));
    }
    public static interface TwoNumberAdd{
        int add(int a, int b);
    };
}
